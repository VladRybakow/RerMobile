<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RerMobile.MainPage">

    <StackLayout Margin="50,20,50,20" Spacing="40">

        <Frame BackgroundColor="White">
            <Image Source="APLUS.png"/>
        </Frame>

        <StackLayout Spacing="5">

            <Label Text="Логин" TextColor="Black" Margin="10,10,60,0" FontSize="20"></Label>

            <Frame Margin="0,0" BorderColor="Black">
                <Entry x:Name="LoginTextbox" TextColor="Black" 
                       Background="White" Margin="-15,-15"
                       Keyboard="Email"/>
            </Frame>

            <Label Text="Пароль" TextColor="Black" Margin="10,10,60,0" FontSize="20"></Label>

            <Frame Margin="0,0" BorderColor="Black">
                <Entry x:Name="PasswordTextBox" IsPassword="True" TextColor="Black"
                       Background="White" Margin="-15,-15" Keyboard="Chat"/>
            </Frame>

        </StackLayout>

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">

            <Button Clicked="ToModalPage" x:Name="Reg" Text="Зарегистрироваться"></Button>
            <Button Clicked="ToNextPage" x:Name="Entry" Text="Вход"></Button>

        </StackLayout>

    </StackLayout>
</ContentPage>
